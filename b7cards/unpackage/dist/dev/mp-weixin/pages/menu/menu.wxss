
page {
height: 100%;
}
.container {
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
height: 100vh;
background-color: #FFF;
position: relative;
overflow: hidden;
}
.container::before {
content: "";
position: absolute;
top: 0;
left: 0;
right: 0;
bottom: 0;
background-image: url('https://ai-public.mastergo.com/ai/img_res/0e959d696ca1a3e3dd5b821a7982dd95.jpg');
background-size: cover;
opacity: 0.3;
z-index: 0;
animation: bgFloat 15s infinite linear;
}
.container::after {
content: "";
position: absolute;
top: 0;
left: 0;
right: 0;
bottom: 0;
background-image: url('https://ai-public.mastergo.com/ai/img_res/736763f06c53f8a8fcfcab04978c7702.jpg');
background-size: 200px 200px;
opacity: 0.2;
z-index: 0;
animation: bgMove 20s infinite linear;
}
@keyframes bgFloat {
0% { background-position: 0% 0%;
}
50% { background-position: 100% 100%;
}
100% { background-position: 0% 0%;
}
}
@keyframes bgMove {
0% { background-position: 0 0;
}
100% { background-position: 200px 200px;
}
}
.header {
display: flex;
justify-content: center;
align-items: flex-end;
flex: 0;
padding: 10rpx 0;
}
.title {
font-size: 56px;
font-weight: bold;
color: #FFF;
text-shadow: 4px 4px 0 rgba(0, 0, 0, 0.5);
font-family: 'Courier New', monospace;
background: linear-gradient(135deg, #FF8C00 0%, #FF4500 100%);
-webkit-background-clip: text;
background-clip: text;
color: transparent;
padding: 20rpx 40rpx;
border-radius: 12px;
animation: blink 1s infinite alternate;
}
@keyframes blink {
from {
transform: translateY(0);
text-shadow: 4px 4px 0 rgba(0, 0, 0, 0.5);
}
to {
transform: translateY(-5px);
text-shadow: 6px 6px 0 rgba(0, 0, 0, 0.7);
}
}
.menu-container {
flex: 0;
display: flex;
flex-direction: column;
justify-content: flex-start;
align-items: center;
gap: 10rpx;
padding: 0 40rpx;
}
.menu-item {
background-color: rgba(255, 255, 255, 0.9);
border: 4px solid #FF6D00;
border-radius: 16px;
padding: 30rpx 60rpx;
width: 300rpx;
text-align: center;
box-shadow: 4px 4px 0 #000;
transition: all 0.3s ease;
position: relative;
z-index: 1;
transform-style: preserve-3d;
}
.menu-item:hover {
transform: translateY(-5px) rotateX(10deg);
box-shadow: 6px 6px 0 #000;
}
.menu-text {
font-size: 26px;
font-weight: bold;
color: #000;
font-family: 'Courier New', monospace;
white-space: nowrap;
}
.grid-item:active {
transform: translateY(0) rotateX(5deg);
box-shadow: 3px 3px 0 #000;
}
.item-label {
font-size: 18px;
font-weight: bold;
color: #000;
text-align: center;
font-family: 'Courier New', monospace;
padding: 16rpx 0;
}
